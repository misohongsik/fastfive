{
    "tech_stack": [
        "TypeScript",
        "Next.js",
        "Prisma",
        "MySQL"
    ],
    "features": [
        {
            "name": "submitTourRequest",
            "description": "Server action to handle tour request submissions. Validates input using Zod, creates a record in the database, and sends an SMS notification.",
            "files": [
                "app/tour/actions.ts",
                "app/lib/prisma.ts",
                "app/lib/sms.ts"
            ],
            "api_doc": {
                "openapi": "3.0.0",
                "paths": {
                    "/submitTourRequest": {
                        "post": {
                            "summary": "Submit a tour request",
                            "requestBody": {
                                "content": {
                                    "multipart/form-data": {
                                        "schema": {
                                            "type": "object",
                                            "properties": {
                                                "name": {
                                                    "type": "string"
                                                },
                                                "companyName": {
                                                    "type": "string"
                                                },
                                                "phone": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                },
                                                "personCount": {
                                                    "type": "string"
                                                },
                                                "locationPreference": {
                                                    "type": "string"
                                                },
                                                "tourDate": {
                                                    "type": "string"
                                                },
                                                "privacyConsent": {
                                                    "type": "string"
                                                },
                                                "marketingConsent": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    ]
}